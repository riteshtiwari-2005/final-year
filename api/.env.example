# Copy this file to .env and fill the values for local development
# MongoDB connection (optional for quick UI testing)
MONGO_URL=

# Port the backend should listen on
PORT=5001

# Crypto and JWT secrets (required for auth/password encryption)
PASS_SEC=your-pass-secret-here
JWT_SEC=your-jwt-secret-here

# Cloudinary credentials (for storing uploaded images)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# SMTP (for sending OTP emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=no-reply@example.com

# OTP expiry in minutes
OTP_EXPIRY_MINUTES=10
